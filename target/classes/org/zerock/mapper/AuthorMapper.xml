<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.AuthorMapper">

	<!-- 권한 전체 조회 -->
	<select id="getList" resultType="org.zerock.domain.AuthorVO">
		select * from author
	</select>
	
	<!-- insert -->
	<insert id="insert">
		insert into author(atgrade, atname, classname)
		values (#{atgrade}, #{atname}, #{classname})
	</insert>
	
	<!-- read -->
	<select id="read" resultType="org.zerock.domain.AuthorVO">
		select * from author where atgrade = #{atgrade}
	</select>
	
	<!-- update -->
	<update id="update">
		update author
		set atname = #{atname},
		classname = #{classname}
		where atgrade = #{atgrade}
	</update>
	
	<!-- delete -->
	<delete id="delete">
		delete author where atgrade = #{atgrade}
	</delete>

</mapper>